{
  "name": "@rispa/ui-kit",
  "rispa:name": "react-ui",
  "version": "4.2.1",
  "description": "Rispa React ui-kit",
  "rispa:activator": "./activator/index.js",
  "rispa:generators": "./generators/index.js",
  "repository": "https://github.com/rispa-io/rispa-ui-kit.git",
  "author": "Andrew Laiff <q.laiff@gmail.com>",
  "scripts": {
    "stylelint": "stylelint atoms/**/*.sss molecules/**/*.sss styles/**/*.sss",
    "test": "yarn sb-config && yarn jest",
    "test:update": "yarn sb-config && jest -u",
    "test:watch": "yarn sb-config && jest --watch",
    "test:coverage": "yarn sb-config && jest --coverage",
    "storybook": "yarn sb-config && better-npm-run start-storybook",
    "sb": "yarn sb-config && better-npm-run start-storybook",
    "build-storybook": "yarn sb-config && better-npm-run build-storybook",
    "sb-config": "node ./bin/storybook.js",
    "g": "plop",
    "lint": "rispa-eslint .",
    "lint:fix": "rispa-eslint . --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@olistic/storyshots": "^3.3.1",
    "@rispa/eslint-config": ">=3.0.0",
    "@storybook/addon-a11y": "^4.1.7",
    "@storybook/addon-actions": "^4.1.7",
    "@storybook/addon-backgrounds": "^4.1.7",
    "@storybook/addon-comments": "^3.2.19",
    "@storybook/addon-cssresources": "^4.1.7",
    "@storybook/addon-info": "^4.1.7",
    "@storybook/addon-knobs": "^4.1.6",
    "@storybook/addon-links": "^4.1.6",
    "@storybook/addon-notes": "^4.1.7",
    "@storybook/addon-options": "^4.1.6",
    "@storybook/addon-storysource": "^4.1.7",
    "@storybook/addon-viewport": "^4.1.7",
    "@storybook/react": "^4.1.6",
    "babel-jest": "^23.6.0",
    "babel-loader": "8.0.5",
    "babel-register": "^6.26.0",
    "better-npm-run": "^0.1.1",
    "browser-resolve": "^1.11.2",
    "enzyme": "^3.8.0",
    "jest": "^23.6.0",
    "plop": "^2.2.0",
    "react-addons-test-utils": "^15.4.2",
    "react-storybook-addon-backgrounds": "^0.0.7",
    "resolve": "^1.3.2",
    "stylelint": "^9.10.0",
    "stylelint-config-standard": "^18.2.0",
    "webpack-hot-middleware": "^2.24.3"
  },
  "dependencies": {
    "@rispa/core": "4.2.x",
    "@rispa/render-server": "4.2.x",
    "@rispa/webpack": "4.2.x",
    "autoprefixer": "^9.4.5",
    "classnames": "^2.2.5",
    "fbjs": "^1.0.0",
    "loader-utils": "^1.1.0",
    "postcss": "^7.0.13",
    "postcss-autoreset": "^2.0.1",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-properties": "^8.0.9",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.1",
    "postcss-initial": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.1",
    "prop-types": "^15.5.6",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "storyshots": "^3.2.2",
    "sugarss": "^2.0.0"
  },
  "jest": {
    "resolver": "<rootDir>/jest/resolver.js",
    "moduleDirectories": [
      "node_modules",
      "atoms",
      "modules",
      "__test__"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.sss$": "<rootDir>/.storybook/stylesMock.js",
      "^.+\\.jpg$": "<rootDir>/.storybook/imgMock.js"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/jest/transform.js"
    },
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "collectCoverageFrom": [
      "atoms/**/*.js",
      "molecules/**/*.js",
      "!**/*.stories.js",
      "!**/*.mock.js",
      "!**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "betterScripts": {
    "start-storybook": {
      "command": "start-storybook -s ./ -p 9001",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build-storybook": {
      "command": "build-storybook -o build/storybook",
      "env": {
        "NODE_ENV": "storybook"
      }
    }
  }
}
